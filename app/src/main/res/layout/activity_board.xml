<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/relativeLayout_board"
    android:layout_height="match_parent"
    tools:context="com.adamk.myszki.BoardActivity"
    android:background="@drawable/map1">


    <ImageView
        android:id="@+id/diceView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:layout_marginTop="29dp"
        app:srcCompat="@drawable/dice6"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:onClick="rollDice"/>

    <ImageView
        android:id="@+id/homeIconView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/diceView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="36dp"
        app:srcCompat="@drawable/home_icon"
        android:onClick="goHome"/>

    <ImageView
        android:id="@+id/restartView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/homeIconView"
        android:layout_below="@+id/homeIconView"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/restart_icon"
        android:onClick="restartGame"/>

</RelativeLayout>
